{
  "name": "llm-squared-framework",
  "version": "0.1.0",
  "description": "Production-ready framework for building LLM products with LLMs - ensuring quality, consistency, and scalability",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:eval": "tsx src/evaluation/test-runner.ts",
    "quality:check": "tsx src/quality/quality-checker.ts",
    "quality:fix": "tsx src/quality/quality-fixer.ts",
    "init:project": "tsx src/scripts/init-project.ts",
    "add:llm-feature": "tsx src/scripts/add-llm-feature.ts",
    "detect-deep-review": "tsx scripts/orchestrator/deep-review-detector.ts",
    "review:deep": "tsx scripts/local/deep-review.ts",
    "review:deep:help": "tsx scripts/local/deep-review.ts --help"
  },
  "keywords": [
    "llm",
    "ai",
    "evaluation",
    "quality",
    "framework",
    "claude",
    "anthropic",
    "prompt-engineering"
  ],
  "author": "Kalpesh",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
